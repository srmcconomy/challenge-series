{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["import"],
  "globals": {
    "__SERVER__": true,
    "__CLIENT__": true
  },
  "settings": {
    "import/ignore": ["node_modules", "config.js"],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "comma-dangle": 0,
    "react/prop-types": 0,
    "import/no-unresolved": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "import/no-duplicates": 2,
    "import/imports-first": 2
  }
}
